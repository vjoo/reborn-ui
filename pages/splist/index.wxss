    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-word;
    color: #232326;
    margin-top: 5px;
    line-height: 15px;
    margin-bottom: 5px;
    padding: 0 4px;
    clear: both;
}
