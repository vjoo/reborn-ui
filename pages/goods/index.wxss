/* pages/goods/index.wxss */
.congb{background-color: #f8f8f8;height: 100vh}
.buy_area {
    overflow: hidden;
    background: #fff;padding:15px;
}
.buy_area .fn_wrap {
    padding: 4px 0px;
    overflow: hidden;
}
.buy_area .fn_wrap .fn {
    color: #484848;
    overflow: hidden;
    font-weight: 300;
    max-height: 3em;
    font-size: 15.5px;
    line-height: 20px;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.buy_area .price_wrap {
  position: relative; 
    height: 20px;
    margin-top: 5px;
    font-size: 12px;
}
.price_wrap {
    box-sizing: border-box;
}
 .buy_area .price {
    float: left;
    font-size: 20px;
    line-height: 20px;
    height: 20px;
    margin-right: 8px;
    color: #ff4545;
    position: relative;
    top: 0px;font-weight: 600;
     
}
.buy_area .userPrice{margin-right: 4px;}
.buy_area .ups{color:#484848;font-size: 12px;position: absolute;top:0;width: 80px;font-weight: normal;}
.buy_area .yxl {
    float:right;
    font-size: 12px;
    color: #999;margin-left: 15px;
   
}
.gdview{margin-top:10px }
.congb .weui-cells{font-size: 14px;}

.dgh{ overflow: hidden;text-overflow: ellipsis;white-space:nowrap;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;}

.fn_wrap.ggs{margin-top:4px; clear: both;display: block;padding:0px;}
    .colorgg{color:#999;width:100%;font-size: 14px;}
    .gglist{width:100%;background-color: #fff;}
    .gglist .gir{padding:6px 15px;border: 1px solid #eee;margin:4px 8px 4px 0px; float: left;font-size: 14px;}
    .gir.on{background-color:#ff4545;color:#fff;border: 1px solid #ff4545;}